<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCCC"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xin chao,"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ho ten"
            android:textColor="#FF00"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_phone_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Sdt)"
            android:textColor="#000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/drawble_menu_giao_dich"
        android:elevation="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_diem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Diem tich luy"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/dollar"
                android:layout_toRightOf="@id/tv_diem"
                android:gravity="right"
                android:text="3000"
                android:textColor="#ff00"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/dollar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_dollar2" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:background="#ff00" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp">

            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/img_vi"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_1" />

                <ImageView
                    android:id="@+id/img_dung_diem"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_2" />

                <ImageView
                    android:id="@+id/img_tien_ich"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_3" />

                <TextView
                    android:id="@+id/tv_tich_diem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_vi"
                    android:text="Tích điểm"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv_dung_diem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_dung_diem"
                    android:layout_marginLeft="75dp"
                    android:layout_toRightOf="@id/tv_tich_diem"
                    android:text="Dùng điểm"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_tien_ich"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="65dp"
                    android:layout_toRightOf="@id/tv_dung_diem"
                    android:gravity="center"
                    android:text="Tiện ích"
                    android:textColor="#000" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_1"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/img_hoi_dap"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_4" />

                <ImageView
                    android:id="@+id/img_dat_hang"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_5" />

                <ImageView
                    android:id="@+id/img_bao_gia"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_6" />

                <TextView
                    android:id="@+id/tv_hoi_dap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_hoi_dap"
                    android:text="Hỏi đáp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv_dat_hang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_dat_hang"
                    android:layout_marginLeft="90dp"
                    android:layout_toRightOf="@id/tv_hoi_dap"
                    android:text="Đặt hàng"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_bao_gia"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="75dp"
                    android:layout_toRightOf="@id/tv_dat_hang"
                    android:gravity="center"
                    android:text="Báo giá"
                    android:textColor="#000" />
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tin tức"
                android:textColor="#000"
                android:textSize="28sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:id="@+id/img_news1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY" />

                        <TextView
                            android:paddingHorizontal="5dp"
                            android:id="@+id/tv_title_news1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="#7E000000"
                            android:text="title"
                            android:textColor="#fff"
                            android:textSize="10sp"
                            android:textStyle=""/>

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/drawble_chitiet_btn_bg">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:text="Chi tiết"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_next" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:id="@+id/img_news2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY" />

                        <TextView
                            android:paddingHorizontal="5dp"
                            android:id="@+id/tv_title_news2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="#7E000000"
                            android:text="title"
                            android:textColor="#fff"
                            android:textSize="10sp" />

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/drawble_chitiet_btn_bg">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:text="Chi tiết"
                                android:textColor="#493434"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_next" />
                        </RelativeLayout>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:id="@+id/img_news3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY" />

                        <TextView
                            android:paddingHorizontal="5dp"
                            android:id="@+id/tv_title_news3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="#7E000000"
                            android:text="title"
                            android:textColor="#fff"
                            android:textSize="10sp" />

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/drawble_chitiet_btn_bg">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:text="Chi tiết"
                                android:textColor="#fff"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_next" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:id="@+id/img_news4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY" />

                        <TextView
                            android:paddingHorizontal="5dp"
                            android:id="@+id/tv_title_news4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="#7E000000"
                            android:text="title"
                            android:textColor="#fff"
                            android:textSize="10sp" />

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/drawble_chitiet_btn_bg">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:text="Chi tiết"
                                android:textColor="#fff"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_next" />
                        </RelativeLayout>

                    </RelativeLayout>


                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Khuyến mãi"
                android:textColor="#000"
                android:textSize="28sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:id="@+id/img_promotion1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY" />

                        <TextView
                            android:paddingHorizontal="5dp"
                            android:id="@+id/tv_title_promotion1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="#7E000000"
                            android:text="title"
                            android:textColor="#fff"
                            android:textSize="10sp"
                            android:textStyle=""/>

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/drawble_chitiet_btn_bg">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:text="Chi tiết"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_next" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:id="@+id/img_promotion2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY" />

                        <TextView
                            android:paddingHorizontal="5dp"
                            android:id="@+id/tv_title_promotion2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="#7E000000"
                            android:text="title"
                            android:textColor="#fff"
                            android:textSize="10sp" />

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/drawble_chitiet_btn_bg">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:text="Chi tiết"
                                android:textColor="#493434"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_next" />
                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
